{
  "extends": [
    "config:recommended"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranchPatterns": [
    "beta"
  ],
  "assignees": [
    "jnstockley"
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/(^|/)requirements(_.*)?.txt$/"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "apache/airflow"
      ],
      "matchFileNames": [
        "Dockerfile"
      ],
      "versioning": "regex:^slim-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "semanticCommitType": "minor",
      "semanticCommitScope": "python_minor"
    }
  ]
}
