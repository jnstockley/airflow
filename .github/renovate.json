{
  "extends": [
    "config:recommended"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "beta"
  ],
  "ignoreDeps": [
    "aiohttp",
    "psycopg2-binary"
  ],
  "pip_requirements": {
    "fileMatch": ["(^|/)requirements(-.*)?.txt$"]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "apache/airflow"
      ],
      "matchFileNames": [
        "Dockerfile"
      ],
      "versioning": "regex:^slim-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "semanticCommitType": "minor",
      "semanticCommitScope": "python_minor"
    }
  ]
}